{
  "name": "@villedemontreal/caporal",
  "version": "4.0.3",
  "description": "A full-featured framework for building command line applications (cli) with node.js",
  "main": "./dist/src/index.js",
  "typings": "dist/src",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "start": "npm run test",
    "test": "npm run test:coverage",
    "test:watch": "vitest src",
    "test:coverage": "vitest run src --coverage",
    "test:no-coverage": "vitest run src",
    "compile": "tsc --build",
    "show-tsconfig": "tsc --showConfig",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "ncu": "ncu --target minor -x @types/node",
    "ncu-fix": "ncu -u --target minor -x @types/node"
  },
  "engines": {
    "node": ">= 24"
  },
  "homepage": "https://github.com/villedemontreal/node-core-libs",
  "keywords": [
    "cli",
    "command",
    "commander",
    "clap",
    "cli-app",
    "minimist",
    "cli-table",
    "command line apps",
    "option",
    "parser",
    "argument",
    "flag",
    "args",
    "argv"
  ],
  "author": "Matthias ETIENNE <matthias@etienne.in> (https://github.com/mattallty)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/villedemontreal/node-core-libs.git",
    "directory": "packages/fork-caporal"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@tsconfig/node22": "22.0.5",
    "@types/lodash": "^4.17.23",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "8.55.0",
    "@typescript-eslint/parser": "8.55.0",
    "@typescript-eslint/utils": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "17.3.0",
    "json": "^11.0.0",
    "prettier": "3.8.1",
    "strip-ansi": "^7.1.2",
    "typescript": "5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@pnpm/tabtab": "^0.5.4",
    "chalk": "5.6.2",
    "glob": "^13.0.3",
    "lodash": "^4.17.23",
    "lodash.truncate": "^4.4.2",
    "table": "^6.9.0",
    "winston": "^3.19.0"
  }
}
