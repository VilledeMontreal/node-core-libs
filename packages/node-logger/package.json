  "main": "dist/src/index.js",
  "typings": "dist/src",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "start": "npm run test",
    "test": "nyc mocha --require ts-node/register ./src/**/*.test.ts",
