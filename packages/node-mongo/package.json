{
  "name": "@villedemontreal/mongo",
  "version": "9.0.0",
  "description": "Utilities for Mongo / Mongoose",
  "main": "dist/src/index.js",
  "typings": "dist/src",
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">= 24"
  },
  "scripts": {
    "start": "npm run test",
    "test": "nyc mocha --exit --require ts-node/register ./src/**/*.test.ts",
    "compile": "tsc --build",
    "show-tsconfig": "tsc --showConfig",
    "show-coverage": "open output/coverage/lcov-report/index.html",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "ncu": "ncu --target minor -x @types/node",
    "ncu-fix": "ncu -u --target minor -x @types/node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/villedemontreal/node-core-libs.git",
    "directory": "packages/node-mongo"
  },
  "homepage": "https://github.com/villedemontreal/node-core-libs",
  "keywords": [
    "mongo",
    "mongoose",
    "utilities"
  ],
  "author": "Ville de Montr√©al",
  "license": "MIT",
  "dependencies": {
    "@villedemontreal/general-utils": "6.0.0",
    "@villedemontreal/logger": "8.0.0",
    "app-root-path": "3.1.0",
    "fs-extra": "11.3.3",
    "http-status-codes": "2.3.0",
    "lodash": "4.17.21",
    "mongodb": "7.0.0",
    "mongodb-memory-server-core": "11.0.1",
    "mongoose": "9.0.2",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/chai": "5.2.3",
    "@types/fs-extra": "11.0.4",
    "@types/lodash": "4.17.21",
    "@types/mocha": "10.0.10",
    "@types/semver": "7.7.1",
    "@types/sinon": "21.0.0",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "@typescript-eslint/utils": "^8.50.1",
    "chai": "6.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "^16.5.0",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "prettier": "3.7.4",
    "sinon": "21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.9.3"
  },
  "override": {
    "mongodb": "$mongodb"
  },
  "config": {
    "mongodbMemoryServer": {
      "resumeDownload": true,
      "maxRetries": 5,
      "debug": false
    }
  }
}
