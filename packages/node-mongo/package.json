{
  "name": "@villedemontreal/mongo",
  "version": "7.1.4",
  "description": "Utilities for Mongo / Mongoose",
  "main": "dist/src/index.js",
  "typings": "dist/src",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "start": "npm run test",
    "test": "nyc mocha --exit --require ts-node/register ./src/**/*.test.ts",
    "compile": "tsc --build",
    "show-tsconfig": "tsc --showConfig",
    "show-coverage": "open output/coverage/lcov-report/index.html",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint-fix": "eslint -c .eslintrc.js --fix --ext .ts src",
    "ncu": "ncu --target minor -x @types/node",
    "ncu-fix": "ncu -u --target minor -x @types/node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/villedemontreal/node-core-libs.git",
    "directory": "packages/node-mongo"
  },
  "homepage": "https://github.com/villedemontreal/node-core-libs",
  "keywords": [
    "mongo",
    "mongoose",
    "utilities"
  ],
  "author": "Ville de Montr√©al",
  "license": "MIT",
  "dependencies": {
    "@villedemontreal/general-utils": "5.17.6",
    "@villedemontreal/logger": "6.6.4",
    "app-root-path": "3.1.0",
    "fs-extra": "11.3.0",
    "http-status-codes": "2.3.0",
    "lodash": "4.17.21",
    "mongodb": "4.17.2",
    "mongodb-memory-server-core": "10.1.4",
    "mongoose": "6.13.8",
    "semver": "7.7.1"
  },
  "devDependencies": {
    "@types/http-status-codes": "1.2.0",
    "@types/lodash": "4.17.16",
    "@types/semver": "7.5.8",
    "@types/chai": "4.3.20",
    "@types/fs-extra": "11.0.4",
    "@types/mocha": "10.0.10",
    "@types/sinon": "17.0.4",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "chai": "4.5.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "5.2.4",
    "mocha": "10.8.2",
    "nyc": "17.1.0",
    "prettier": "3.5.3",
    "sinon": "19.0.5",
    "ts-node": "^10.9.2",
    "typescript": "5.8.2"
  },
  "override": {
    "mongodb": "$mongodb"
  }
}
