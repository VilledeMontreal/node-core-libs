{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "pretty": true,
    // "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "newLine": "LF",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "downlevelIteration": true
  }
}
